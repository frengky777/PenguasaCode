generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  price       Float
  oldPrice    Float?
  description String
  image       String
  category    String
  rating      Float
  inStock     Boolean
  featured    Boolean?
  tags        String[]
}
model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
}
